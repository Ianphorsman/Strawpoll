<!DOCTYPE html>
<html>
  <head>
    <title>Strawpoll</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Dosis:400,700' rel='stylesheet' type='text/css'>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.bundle.min.js"></script>
    <meta name="viewport" content="initial-scale=1", maximum-scale="1">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield :home %>
      <section class="row">
          <%= react_component 'App',
                              :userParticipated => user_participated?,
                              :userHasVoted => user_has_voted?,
                              :userVotes => @user_votes,
                              :userPollVotes => @user_poll_votes,
                              :pollContext => @poll_context,
                              :pollId => @poll_id,
                              :userId => @user_id,
                              :userPolls => @user_polls,
                              :popularPolls => @popular_polls,
                              :fullAccessToStream => @full_access_to_stream,
                              :pollData => @poll_data,
                              :voteCount => @vote_count,
                              :shareLink => @share_link,
                              :latestPollId => @latest
          %>
      </section>
  </body>
</html>
